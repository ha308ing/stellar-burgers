{
  "name": "stellar-burgers",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.13.1"
  },
  "dependencies": {
    "@reduxjs/toolkit": "2.2.5",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.97",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@ya.praktikum/react-developer-burger-ui-components": "1.14.0",
    "minireset.css": "0.0.7",
    "react": "^18.3.1",
    "react-dnd": "16.0.1",
    "react-dnd-html5-backend": "16.0.1",
    "react-dom": "^18.3.1",
    "react-redux": "9.1.2",
    "react-router-dom": "6.23.1",
    "react-scripts": "5.0.1",
    "sass": "1.77.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "test:ui": "cross-env BROWSER=NONE run-p start cypress:open",
    "lint": "run-p prettier eslint stylelint",
    "start:build": "run-s build serve",
    "stylelint": "stylelint \"./src/**/*.{css,scss}\"",
    "prettier": "prettier ./src --check",
    "eslint": "eslint ./src",
    "serve": "serve -s build",
    "test:watch": "npm run test",
    "test:verbose": "npm run test -- --verbose",
    "test:coverage": "npm run test -- --coverage",
    "cypress:open": "cypress open cache clear '--' --e2e -b electron",
    "cypress:run": "cypress run -- --e2e -b electron",
    "cypress:build": "cross-env BROWSER=NONE run-p start:build cypress:open",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "plugins": [
      "filename-rules"
    ],
    "rules": {
      "filename-rules/match": [
        2,
        "kebab-case"
      ],
      "@typescript-eslint/consistent-type-imports": "error"
    },
    "overrides": [
      {
        "files": [
          "*.{js,jsx,ts,tsx}"
        ],
        "rules": {
          "no-unused-vars": "error"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-css-modules",
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-use-logical"
    ],
    "rules": {
      "scss/dollar-variable-pattern": null,
      "selector-class-pattern": [
        "^([a-z][a-z0-9]*)([A-Z_][a-z0-9]+)*$",
        {
          "message": "Expected class selector \"%s\" to be camelCase or _"
        }
      ],
      "value-keyword-case": null,
      "csstools/use-logical": true
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@types/redux-mock-store": "1.0.6",
    "commitlint": "19.3.0",
    "cross-env": "7.0.3",
    "cypress": "13.13.2",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-cypress": "3.4.0",
    "eslint-plugin-filename-rules": "1.3.1",
    "lefthook": "1.6.11",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "redux-mock-store": "1.5.4",
    "serve": "14.2.3",
    "stylelint": "16.5.0",
    "stylelint-config-css-modules": "4.4.0",
    "stylelint-config-idiomatic-order": "10.0.0",
    "stylelint-config-standard-scss": "13.1.0",
    "stylelint-use-logical": "2.1.2"
  }
}
